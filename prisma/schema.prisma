generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Booking {
  id                String   @id @default(uuid())
  consultationType  String
  btrOption         String
  duration          Int
  consultationDate  String
  consultationTime  String
  name              String
  dob               String
  tob               String
  gender            String
  email             String
  phone             String
  birthPlace        String
  concern           String
  amount            Int
  paymentStatus     String   @default("Pending")
  status            String   @default("Upcoming") // Upcoming | Completed | Cancelled
  cashfreeOrderId   String?
  cashfreePaymentId String?
  meetingLink       String?
  adminNotes        String?
  userTimezone      String   @default("UTC")
  adminTimezone     String   @default("Asia/Kolkata")
  currency          String   @default("INR")
  promoCode         String?
  discountAmount    Int      @default(0)
  createdAt         DateTime @default(now())
}

model Availability {
  id        String  @id @default(uuid())
  dayOfWeek Int                // 0=Sun..6=Sat
  timeSlot  String             // "7:00 PM - 8:00 PM"
  isActive  Boolean @default(true)
}

model BlockedDate {
  id     String  @id @default(uuid())
  date   String  @unique
  reason String?
}

model PromoCode {
  id              String   @id @default(uuid())
  code            String   @unique
  discountPercent Int
  maxUses         Int      @default(1)
  usedCount       Int      @default(0)
  isActive        Boolean  @default(true)
  expiresAt       String?
  createdAt       DateTime @default(now())
}

model ServicePackage {
  id          String   @id @default(uuid())
  name        String
  description String
  sessionCount Int
  price       Int
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  userPackages UserPackage[]
}

model UserPackage {
  id               String   @id @default(uuid())
  userEmail        String
  packageId        String
  package          ServicePackage @relation(fields: [packageId], references: [id])
  remainingSessions Int
  paymentStatus    String   @default("Pending")
  createdAt        DateTime @default(now())
}

model Testimonial {
  id         String   @id @default(uuid())
  name       String
  rating     Int
  text       String
  isApproved Boolean  @default(false)
  createdAt  DateTime @default(now())
}

model Waitlist {
  id        String   @id @default(uuid())
  date      String
  name      String
  email     String
  phone     String
  createdAt DateTime @default(now())
}
model Pricing {
  id              String   @id @default("singleton")
  inrNormal40     Int      @default(2499)
  inrUrgent40     Int      @default(4999)
  inrNormal90     Int      @default(4500)
  inrUrgent90     Int      @default(8000)
  inrBtr          Int      @default(2500)
  // Legacy fields (can be kept or removed after migration)
  inrNormal       Int      @default(2499)
  inrUrgent       Int      @default(4999)
  usdNormal       Int      @default(30)
  usdUrgent       Int      @default(60)
  usdBtr          Int      @default(40)
  updatedAt       DateTime @updatedAt
}
